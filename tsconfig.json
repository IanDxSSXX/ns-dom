{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["dev/*"],
      "@/*": ["dev/*"]
    }
  },
  "include": ["dev/**/*", "src/**/*", "test/**/*", "*.config.{js,ts}"],
  "files": ["./references.d.ts"],
  "exclude": ["node_modules", "platforms"]
}
